{
  "name": "@waidrin/langgraph-agent",
  "version": "0.1.0",
  "description": "LangGraph agent for Waidrin codebase lifecycle management",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "agent:dev": "tsx src/examples/dev-agent.ts",
    "agent:build": "tsx src/examples/build-agent.ts",
    "agent:test": "tsx src/examples/test-agent.ts"
  },
  "dependencies": {
    "@langchain/core": "^0.3.75",
    "@langchain/langgraph": "^0.4.9",
    "@langchain/openai": "^0.3.0",
    "zod": "^3.25.67",
    "fast-glob": "^3.3.3",
    "chokidar": "^3.6.0",
    "execa": "^9.0.0",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/fs-extra": "^11.0.4",
    "typescript": "^5",
    "tsx": "^4.7.0",
    "vitest": "^1.6.0",
    "@biomejs/biome": "2.0.6"
  },
  "peerDependencies": {
    "waidrin": "workspace:*"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "langgraph",
    "agent",
    "waidrin",
    "codebase",
    "lifecycle",
    "automation"
  ],
  "author": "Waidrin Team",
  "license": "AGPL-3.0-or-later"
}
