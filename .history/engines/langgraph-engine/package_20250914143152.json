{
  "name": "@waidrin/langgraph-engine",
  "version": "0.1.0",
  "description": "LangGraph-powered game engine for Waidrin",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "dev:engine": "tsx src/examples/basic-game.ts",
    "test": "vitest",
    "test:engine": "vitest --run src/core/",
    "test:nodes": "vitest --run src/nodes/",
    "test:tools": "vitest --run src/tools/",
    "test:watch": "vitest --watch",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "create:node": "tsx scripts/create-node.ts",
    "create:tool": "tsx scripts/create-tool.ts",
    "debug:node": "tsx src/examples/debug-node.ts"
  },
  "dependencies": {
    "@langchain/core": "^0.3.75",
    "@langchain/langgraph": "^0.4.9",
    "@langchain/openai": "^0.3.0",
    "zod": "^3.25.67",
    "immer": "^10.1.1",
    "zustand": "^5.0.5",
    "lodash": "^4.17.21",
    "fast-glob": "^3.3.3"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/lodash": "^4.17.20",
    "typescript": "^5",
    "tsx": "^4.7.0",
    "vitest": "^1.6.0",
    "@biomejs/biome": "2.0.6"
  },
  "peerDependencies": {
    "waidrin": "workspace:*"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "langgraph",
    "game-engine",
    "waidrin",
    "rpg",
    "ai",
    "narrative",
    "state-machine"
  ],
  "author": "Waidrin Team",
  "license": "AGPL-3.0-or-later"
}
